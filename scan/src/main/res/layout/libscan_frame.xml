<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.dazhi.scan.view.ViewScanMask
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_width="@dimen/libscan_framewidth"
        app:inner_height="@dimen/libscan_frameheight"
        app:inner_corner_color="@color/libscan_line"
        app:inner_corner_length="@dimen/libscan_cornerlinelength"
        app:inner_corner_width="@dimen/libscan_cornerlinewidth"
        app:inner_scan_speed="15"
        app:inner_scan_iscircle="false" />

</FrameLayout>